<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.prabhjot.project_cis657.Message_content"
    tools:showIn="@layout/activity_message_content">


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg"
        android:layout_marginTop="28dp"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >



        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey!! Happy Birthday!! "
        app:layout_constraintLeft_toRightOf="@+id/sample1"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="28dp"

        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="35dp"
           />


        <RadioButton
        android:id="@+id/radio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="Hey!! Happy Anniversary"
        app:layout_constraintLeft_toRightOf="@+id/sample2"
        app:layout_constraintTop_toBottomOf="@+id/radio1"
        android:layout_marginTop="4dp"

        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="35dp"
           />

         <RadioButton
        android:id="@+id/radio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:text="Its Thanksgiving Thanks\nThankyou for being there :) "
        app:layout_constraintLeft_toRightOf="@+id/sample3"
        app:layout_constraintTop_toBottomOf="@+id/radio2"
        android:layout_marginTop="5dp"

        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="35dp"
            />

        <RadioButton
        android:id="@+id/radio4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="Write your own message: "
        app:layout_constraintLeft_toRightOf="@+id/sample4"
        app:layout_constraintTop_toBottomOf="@+id/radio3"
        android:layout_marginTop="25dp"

        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="35dp"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/textbox"
        android:hint="Enter your own message here \n "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg"
        android:layout_marginTop="25dp"
        android:layout_marginStart="58dp"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="35dp" />


</android.support.constraint.ConstraintLayout>
